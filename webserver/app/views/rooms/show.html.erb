<h1><%= @room.name %></h1>

<% if @room.id != 1 %>
  <%= link_to t(".edit_link"), url_with_password(@room, :action => :edit) %>
  <%= render "share" %>
<% end %>
<%= link_to 'Gallery', room_gallery_path(@room, @gallery) %>
<% if @room.animation %>
  <%= render "canvas" %>
<% else %>
  <%= link_to url_with_password([@room, :animation], :action => :new) do %>
    <button>Create new animation</button>
  <% end %>
<% end %>
