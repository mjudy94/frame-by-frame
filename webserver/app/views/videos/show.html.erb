<div class="page-header">
  <h1><%= @video.name %></h1>
</div>

<div class="row-fluid">
  <%= link_to 'Home', root_path, :class => "btn btn-default"  %>
  <%= link_to 'Gallery', url_with_password([@gallery.room, :gallery]), :class => 'btn btn-default' %>
</div>

<div class="video-container center">
  <video id="<%=@video.id %>" class="video-js vjs-default-skin vjs-big-play-centered"
      controls autoplay loop preload="auto" width="960" height="540"
      data-setup='{"example_option":true}'>
    <source src="<%= @video.presigned_url %>" type='video/webm' />
    <p class="vjs-no-js">To view this video, please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
  </video>
</div>
